<Window x:Class="WPFSortFilter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSortFilter"
        xmlns:virtualizingWrapPanel="clr-namespace:VirtualizingWrapPanel;assembly=VirtualizingWrapPanel"
        xmlns:sample="clr-namespace:VirtualizingWrapPanel.Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate" DataType="local:Model">
            <ToggleButton Background="AntiqueWhite" Width="120" Height="120">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock FontSize="20" TextAlignment="Center" Text="{Binding Number, Mode=OneTime}" Padding="8" />
                    <TextBlock FontSize="18" TextAlignment="Center" Text="{Binding FirstName, Mode=OneTime}" Padding="8" />
                    <TextBlock FontSize="18" TextAlignment="Center" Text="{Binding LastName, Mode=OneTime}" Padding="8" />
                    <TextBlock TextAlignment="Center" Text="{Binding CurrentDateTime, Mode=OneWay, StringFormat='{}{0:hh:mm:ss}'}" Padding="8" />
                </StackPanel>
            </ToggleButton>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Margin="12" Orientation="Horizontal" >
                <TextBlock VerticalAlignment="Center" Text="Search Name:  " />
                <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" Width="200" />
            </StackPanel>

            <!-- <ListView -->
